<% layout('layout/boilerplate') %>
     
<div class="">
   <h1 class="text-center">New Campground</h1>
   <div class="col-6 offset-3">
      <form action="/campground" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

         <div class="mb-3">
         <label class="form-label" for="title">Title :</label>
         <input class="form-control" type="text" name="campground[title]" id="title" placeholder="tittle" required>
         </div>

         <div class="mb-3">
         <label class="form-label" for="place">Palce :</label>
         <input class="form-control" type="text" name="campground[place]" id="place" placeholder="place" required>
         </div>
         
         <div class="mb-3">
            <label for="formFile" class="form-label">Upload Image</label>
            <input class="form-control" type="file" id="formFile" name="image" multiple>
         </div>

         <div class="mb-3">
            <label class="form-label" for="price">Price :</label>
            <input class="form-control" type="text" name="campground[price]" id="price" placeholder="price" required>
         </div>

         <div class="mb-3">
            <label class="form-label" for="description">Description :</label>
            <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="description"></textarea>
         </div>
         
         <div class="mb-3">
         <button class="btn btn-success">sumbit</button>
         </div>
      </form>
      
   </div>
</div>


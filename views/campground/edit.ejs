<% layout('layout/boilerplate') %>

     <div class="">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
           <form action="/campground/<%=campground._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
     
              <div class="mb-3">
              <label class="form-label" for="title">Title :</label>
              <input class="form-control" type="text" name="campground[title]" id="title" placeholder="tittle" value="<%= campground.title %>" required>
              </div>
     
              <div class="mb-3">
              <label class="form-label" for="place">Palce :</label>
              <input class="form-control" type="text" name="campground[place]" id="place" placeholder="place" value="<%= campground.place %>" required>
              </div>
     
               <div class="mb-3">
                  <label for="formFile" class="form-label">Add Image</label>
                  <input class="form-control" type="file" id="formFile" name="image" multiple>
               </div>
     
              <div class="mb-3">
                 <label class="form-label" for="price">Price :</label>
                 <input class="form-control" type="text" name="campground[price]" id="price" placeholder="price" value="<%= campground.price %>" required>
              </div>
     
              <div class="mb-3">
                 <label class="form-label" for="description">Description :</label>
                 <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="description"> <%= campground.description %></textarea>
              </div>

              <div class="mb-3">
               <% campground.image.forEach(function(imgs,i){ %>
                  <img src="<%= imgs.url %>" alt="" class="img-thumbnail">
                  <div class="form-check-inline">
                     <input type="checkbox" name="deleteImages[]" value="<%= imgs.signature %>" id="image-<%=i%>">
                  </div>
                  <label for="image-<%=i%>">Delete</label>
               <% }) %>

               </div>
              
              <div class="mb-3">
              <button class="btn btn-info">Update Campground</button>
              </div>
           </form>
        </div>
     </div>

